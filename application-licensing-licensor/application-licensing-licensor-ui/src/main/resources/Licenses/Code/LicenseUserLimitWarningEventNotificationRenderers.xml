      <notificationTemplate>#template('notification/macros.vm')

#set ($mainIcon = 'warning')
#set ($smallIcon = '')

#macro (displayEventDetails $event)
  #set ($customEventInfo = $jsontool.fromString($event.getBody()))
  #set ($localizationId = 'licensor.notification.userLimitWarning.description')
  #if ($customEventInfo['userDiff'] == 1)
    #set ($localizationId = $localizationId + '.under.singular')
  #elseif ($customEventInfo['userDiff'] &gt; 0)
    #set ($localizationId = $localizationId + '.under')
  #elseif ($customEventInfo['userDiff'] == 0)
    #set ($localizationId = $localizationId + '.limit')
  #else
    #set ($localizationId = $localizationId + '.over')
  #end
  &lt;tr&gt;
    &lt;td class="description"&gt;$services.localization.render($localizationId, [$customEventInfo['license'], $customEventInfo['userDiff']])&lt;/td&gt;
    &lt;td class="text-right text-muted"&gt;
      $escapetool.xml($xwiki.formatDate($event.date))
    &lt;/td&gt;
  &lt;/tr&gt;
#end

#define ($content)
  &lt;div class="notification-description"&gt;
    $services.localization.render('licensor.notification.userLimitWarning.title', 'xhtml/1.0', [])
    &lt;div&gt;&lt;small class="text-muted"&gt;$escapetool.xml($!services.date.displayTimeAgo($!event.events[0].date))&lt;/small&gt;&lt;/div&gt;
  &lt;/div&gt;
#end

#define ($details)
  #define ($rows)
    #foreach ($thisEvent in $event.events)
      #if ($thisEvent.type == 'com.xwiki.licensing.internal.userlimit.notifications.LicenseUserLimitWarningEvent')
        #displayEventDetails($thisEvent)
      #end
    #end
  #end
  #displayNotificationEventDetailsSkeletons($event.events.size(), $rows)
#end

#displayNotificationEventSkeleton($mainIcon $smallIcon $content $details)</notificationTemplate>
